#!/usr/bin/env bash

# Use Nix flake
use flake

# Load environment variables from .env file if it exists
if [ -f .env ]; then
  dotenv
fi

# Add src directory to PYTHONPATH
export PYTHONPATH="$PWD/src:$PYTHONPATH"

# Remind user about OpenAI API key
if [ -z "$OPENAI_API_KEY" ]; then
  echo "‚ö†Ô∏è  Warning: OPENAI_API_KEY environment variable is not set."
  echo "   You can set it in a .env file or export it in your shell."
fi

echo "üìß Email Filter development environment loaded"
